<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<h3>숫자 표기</h3>
	<fmt:formatNumber value="1234567.89" var="number"/> <!-- 1,234,567.89 -->
	${number}<br>
	<fmt:formatNumber value="1234567.89" groupingUsed="false" /><br> <!-- 1234567.89 -->
	<fmt:formatNumber value=".35" type="percent"/><br> <!-- 35% -->
	<fmt:formatNumber value="5000" type="currency"/><br> <!-- ₩5000 -->
	<fmt:formatNumber value="5000" type="currency"/> <!-- 1,234,567.89 -->
	<hr>
	<h3>소수점 표시</h3>
	<fmt:formatNumber value="1234567.891234567" pattern="#,#00.0#"/><br> <!-- 1,234,567.89 -->
</body>
</html>